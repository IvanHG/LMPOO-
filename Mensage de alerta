//funcion para desplegar la alerta// ***IMPLEMENTAR***

func mostrarMensageAlerta(_ mensageUsuario:String){
	var alerta = UIAlertController(title:"", message:mensageUsuario, preferredStyle:UIAlertControllerStyle.alert)
	
	//se pueden agregar 2 opciones para proseguir, es decir, 2 let okAction
	
	let okAction = UIAlertAction(title:"OK",style:UIAlertActionStyle.default, handler:nil)
	
	alerta.addAction(okAction)
	self.presentViewController(alerta, animated:true, completion:nil)
}

// cuando se tenga que usar un mensage de alerta solo implementamos la funcion con su parametro 

mostrarMensageAlerta("mensage que queramos mostrar")
